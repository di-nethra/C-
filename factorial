#include <iostream>

int main() {
    int n, r;
    std::cout << "Enter a value for n ";
    std::cin >> n;
    std::cout << "Enter a value for r ";
    std::cin >> r;
    std::cout << "nCr = ";
    std::cout << nCr(n, r);
    std::cout << std::endl;
}

int fact(int n) 
{ 
    int res = 1; 
    for (int i = 2; i <= n; i++) 
        res *= i; 
    return res; 
} 

long Factorial(int no);
long nCr(int n, int r);

long Factorial(int no)
{
    int n = 1;
    for (int i = 2; i <= no; i++)
    {
        n *= i;
    }
    return n;

}
long nCr(int n, int r)
{
    {
        return Factorial(n) / (Factorial(r) * Factorial(n - r));
    }
}
